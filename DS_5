#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX 100

char stack[MAX];
int top = -1;

// Push function
void push(char c) {
    if (top == MAX - 1) {
        printf("Stack Overflow!\n");
        return;
    }
    stack[++top] = c;
}

// Pop function
char pop() {
    if (top == -1)
        return '\0'; // Stack empty
    return stack[top--];
}

// Function to check if brackets match
int isMatchingPair(char open, char close) {
    return (open == '(' && close == ')') ||
           (open == '{' && close == '}') ||
           (open == '[' && close == ']');
}

// Function to check if expression is balanced
int isBalanced(char *exp) {
    for (int i = 0; exp[i] != '\0'; i++) {
        char c = exp[i];

        if (c == '(' || c == '{' || c == '[')
            push(c);
        else if (c == ')' || c == '}' || c == ']') {
            char popped = pop();
            if (!isMatchingPair(popped, c))
                return 0; // Not balanced
        }
    }

    return (top == -1); // If stack empty → balanced
}

// Main function
int main() {
    char exp[MAX];

    printf("Enter an expression: ");
    gets(exp); // (Use fgets in safer code)

    if (isBalanced(exp))
        printf("\n✅ Expression is Balanced.\n");
    else
        printf("\n❌ Expression is Not Balanced.\n");

    return 0;
}
