#include <stdio.h>

int main() {
    int num, binary[32], i = 0;

    printf("Enter a decimal number: ");
    scanf("%d", &num);

    if (num == 0) {
        printf("Binary: 0\n");
        return 0;
    }

    // Convert decimal to binary
    while (num > 0) {
        binary[i] = num % 2;  // Store remainder
        num = num / 2;
        i++;
    }

    printf("Binary: ");
    // Print binary digits in reverse order
    for (int j = i - 1; j >= 0; j--)
        printf("%d", binary[j]);

    printf("\n");
    return 0;
}
