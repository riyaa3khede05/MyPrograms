#include <stdio.h>
#include <stdlib.h>
#define MAX 10  // total size of array

int arr[MAX];
int front1 = -1, rear1 = -1;   // Queue 1 pointers
int front2 = MAX, rear2 = MAX; // Queue 2 pointers

// Enqueue in Queue 1
void enqueue1(int value) {
    if (rear1 + 1 == rear2) {
        printf("\nQueue Overflow! Cannot insert %d in Queue 1\n", value);
        return;
    }

    if (front1 == -1)
        front1 = 0;

    arr[++rear1] = value;
    printf("%d inserted in Queue 1\n", value);
}

// Enqueue in Queue 2
void enqueue2(int value) {
    if (rear2 - 1 == rear1) {
        printf("\nQueue Overflow! Cannot insert %d in Queue 2\n", value);
        return;
    }

    if (front2 == MAX)
        front2 = MAX - 1;

    arr[--rear2] = value;
    printf("%d inserted in Queue 2\n", value);
}

// Dequeue from Queue 1
void dequeue1() {
    if (front1 == -1 || front1 > rear1) {
        printf("\nQueue 1 Underflow!\n");
        return;
    }

    printf("%d deleted from Queue 1\n", arr[front1++]);
}

// Dequeue from Queue 2
void dequeue2() {
    if (front2 == MAX || front2 < rear2) {
        printf("\nQueue 2 Underflow!\n");
        return;
    }

    printf("%d deleted from Queue 2\n", arr[front2--]);
}

// Display Queue 1
void display1() {
    if (front1 == -1 || front1 > rear1) {
        printf("\nQueue 1 is empty.\n");
        return;
    }

    printf("\nQueue 1 elements: ");
    for (int i = front1; i <= rear1; i++)
        printf("%d ", arr[i]);
    printf("\n");
}

// Display Queue 2
void display2() {
    if (front2 == MAX || front2 < rear2) {
        printf("\nQueue 2 is empty.\n");
        return;
    }

    printf("\nQueue 2 elements: ");
    for (int i = front2; i >= rear2; i--)
        printf("%d ", arr[i]);
    printf("\n");
}

// Main function
int main() {
    int choice, queueNo, value;

    while (1) {
        printf("\n--- Two Queues Using One Array ---");
        printf("\n1. Enqueue");
        printf("\n2. Dequeue");
        printf("\n3. Display");
        printf("\n4. Exit");
        printf("\nEnter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter queue number (1 or 2): ");
                scanf("%d", &queueNo);
                printf("Enter value: ");
                scanf("%d", &value);
                if (queueNo == 1)
                    enqueue1(value);
                else if (queueNo == 2)
                    enqueue2(value);
                else
                    printf("Invalid queue number!\n");
                break;

            case 2:
                printf("Enter queue number (1 or 2): ");
                scanf("%d", &queueNo);
                if (queueNo == 1)
                    dequeue1();
                else if (queueNo == 2)
                    dequeue2();
                else
                    printf("Invalid queue number!\n");
                break;

            case 3:
                display1();
                display2();
                break;

            case 4:
                printf("\nExiting program...\n");
                exit(0);

            default:
                printf("Invalid choice!\n");
        }
    }
    return 0;
}
